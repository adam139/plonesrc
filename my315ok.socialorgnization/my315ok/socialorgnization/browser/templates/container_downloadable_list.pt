<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Strict//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-strict.dtd">
<html xmlns="http://www.w3.org/1999/xhtml"
      xmlns:tal="http://xml.zope.org/namespaces/tal"
      xmlns:metal="http://xml.zope.org/namespaces/metal"
      metal:use-macro="here/main_template/macros/master"
      xmlns:i18n="http://xml.zope.org/namespaces/i18n"      
      i18n:domain="my315ok.socialorgnization">        
      <head>
   		<metal:block fill-slot="style_slot">
      	<metal:block use-macro="here/@@my315ok-socialorgnization-macros/macros/styles"/>
   		</metal:block>
		</head>
<body>
<metal:main fill-slot="main">
    <tal:main-macro metal:define-macro="main">
       <section id="profile">
			<div class="page-header">
           <h3><span tal:content="python:context.title">社团</span>文件下载</h3>           
       </div>      
<!--       <div class="row-fluid" tal:define="datalist python:view.getFolders();num python:len(datalist)">
       	<tal:repeat="tab python:datalist">
       	        <h2 class="kuputab-tab-definer"  tal:content="python:tab.title">
           Header
        </h2>
       	</tal:repeat="tab> 
       	-->       
       <div class="span12" tal:define="itemlist python:view.getFiles();num python:len(itemlist)">
       	<div tal:condition="num">
									<table class="table table-striped table-bordered table-condensed">
										<thead>
                				<tr>
                					<th class="span7">文件名称</th>
                					<th class="span3" >发布时间</th>
                					<th class="span2" >下载链接</th>
                				</tr>
                			</thead>
                			<tbody>
                					<tr tal:repeat="file python:itemlist">
                						<td class="span8" tal:content="python:file.Title">中国中亚友好协会</td>
                						<td class="span2" tal:content="python:file.created.strftime('%Y-%M-%D')">2013-12-03</td>
                						<td class="span2"><a href="" tal:attributes="href python:file.getURL() + '/download'" title="下载这个文件">下载</a></td>
                					</tr>
                			</tbody>
                		</table>                		
                	</div>    
      </div>
      </section>          
    </tal:main-macro>
</metal:main>
</body>
</html>
