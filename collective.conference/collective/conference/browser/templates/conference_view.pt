$("#regsession").live("click",function() {	
		var action = $(this).attr('data-ajax-target');
		$.post(action, function(){
			$("#regsession").parent().hide();
		}, 'json');
	return false;
});
*/
</script>	
</metal:js>
</body>
</html>
